---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import { log } from "astro/dist/core/logger/core";

export interface Props {
  title: string;
}

// const { src } = await getImage({
//   src: "../../assets/hero.png",
//   width: 800,
//   height: 742,
//   format: "avif",
// });
// console.log(src);

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "EGO Calzado"
  : "EGO Calzado";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" href="https://scontent-lim1-1.xx.fbcdn.net/v/t39.30808-6/263749370_1094008901141585_2544136936142628773_n.jpg?_nc_cat=105&ccb=1-7&_nc_sid=973b4a&_nc_eui2=AeGaSTSRoTgjb8-wMfqQrAtcr0qPGyyppJ6vSo8bLKmknnu2-MuwoQlRSIFJ7Rm5FMb7MuQFfoFqD25_hqkb5QdI&_nc_ohc=-7i2ymclLicAX_MPaTZ&tn=ZL8z6FtY8q9asoIX&_nc_ht=scontent-lim1-1.xx&oh=00_AfA7QbAqiv36L058PFeASx0A1XlpuEGRls-eytP4aSgXAA&oe=63A10AD5">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-F5T1KY225P"></script>
    <script>
    window.dataLayer = window.dataLayer || []; function gtag(){dataLayer.push(arguments); } gtag('js', new Date()); gtag('config', 'G-F5T1KY225P');
    </script>

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="El mejor calzado para damas"
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `EGO Calzado - Lo mejor para ellas`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "EGO Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
      /* Avoid Alpine.js Hidden Element Flash */
      [x-cloak] {
        display: none;
      }
    </style>
  </body>
</html>
